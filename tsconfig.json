{
  "compilerOptions": {
    "outDir": "dist/",
    "sourceMap": true,
    "target": "es2019",
    "declarationDir": "dist/types",
    "module": "commonjs",
    "declaration": true,
    "lib": [ "es2019", "dom" ],
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "webdriverio/async",
      "@types/websql",
      "@wdio/mocha-framework",
      "@wdio/devtools-service"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}