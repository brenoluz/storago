{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "webdriverio/async",
      "@types/websql",
      "@wdio/mocha-framework",
      "@wdio/devtools-service"
    ]
  },
  "include": [
    "./test/**/*.ts",
    "./src/**/*.ts"
  ]
}